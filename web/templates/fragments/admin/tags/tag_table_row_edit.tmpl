<tr id="tag-table-row-{{ .Id }}">
  <form name="update-tag">
    <td class="stretch">
      <input type="hidden" name="id" value="{{ .Id }}">
      {{ .Id }}
    </td>

    <td>
      <!-- TODO: add validation -->
      <input type="text" name="name" value="{{ .Name }}" placeholder="Tag Name" required>
    </td>

    <td>
      <!-- TODO: add validation -->
      <input type="text" name="slug" value="{{ .Slug }}" placeholder="tag-slug" required>
    </td>

    <td class="stretch">
      <button hx-patch="/admin/tags/{{ .Id }}" hx-target="closest #tag-table-row-{{ .Id }}" hx-swap="outerHTML swap:0.25s">Save</button>
      &nbsp;
      <button hx-get="/admin/tags/{{ .Id }}" hx-target="closest #tag-table-row-{{ .Id }}" hx-swap="outerHTML">Cancel</button>
    </td>
  </form>
</tr>

