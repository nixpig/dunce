<style>
  .tag-create {
    background-color: var(--accent-bg);
    margin: 1.5rem 0;
    border: 1px solid var(--border);
    padding: 1rem;
  }
</style>
<style>
  .tag-create h3 {
    margin-top: 0;
  }

  .tag-create input+div {
    opacity: 0;
    max-height: 0;
    transition: all 0.25s ease-in-out;
  }

  .tag-create .errors input:user-invalid+div {
    color: var(--text);
    background-color: var(--error);
    border-radius: var(--standard-border-radius);
    padding: 0.225rem;
    margin-bottom: 1rem;
    max-height: 300px;
    opacity: 1;
    transition: all 0.25s ease-in-out;
  }

  .errors input:user-invalid {
    border: 2px solid var(--error);
  }

  .errors input#name:user-invalid:placeholder-shown+div::after {
    content: "Tag name is required";
  }

  .errors input#slug:user-invalid:placeholder-shown+div::after {
    content: "Slug is required";
  }

  .errors input#slug:user-invalid+div::after {
    content: "Slug is invalid"
  }

  #tag-errors {
    max-height: 500px;
    overflow: hidden;
    opacity: 1;
    transition: all .25s ease-in-out;
  }

  #tag-errors:has(.htmx-swapping) {
    max-height: 0;
    opacity: 0;
    transition: all .25s ease-in-out;
  }

  .error-list li {
    color: var(--text);
    background-color: var(--error);
    border: 1px dashed var(--error);
    border-radius: var(--standard-border-radius);
    padding: 0.225rem 0.5rem;
    display: block;
    margin-bottom: 1rem;
  }

  ul.error-list {
    padding: 0;
    margin: 0;
  }
</style>

<div class="tag-create">
  <h3>Create new tag</h3>

  <div id="tag-errors">
    <ul class="error-list">
      <span class="error-hook"></span>
    </ul>
  </div>

  <form name="create-tag" 
    hx-post="/admin/tags"
    hx-target="#tag-table .tr.thead" 
    hx-target-5xx="#tag-errors .error-hook" 
    hx-target-4xx="#tag-errors .error-hook" 
    hx-swap="afterend swap:.25s" 
    hx-on::after-request=" if (event.detail.xhr.status <= 399) this.reset(); " 
    hx-on::before-request=" document.querySelectorAll('#tag-errors .error-list li').forEach(e => e.remove()); "
  >

    <label for="name">
      Tag name
    </label>
    <div class="errors">
      <input type="text" id="name" name="name" placeholder="Tag Name" required>
      <div class="name-input"></div>
    </div>

    <label for="slug">
      Slug
    </label>
    <div class="errors">
      <input type="text" id="slug" name="slug" pattern="^[a-zA-Z0-9\-]+$" placeholder="tag-slug" required>
      <div class="slug-input"></div>
    </div>

    <hr>

    <button type="submit">Create</button>
  </form>
</div>
