<style>
	.tag-create {
		background-color: var(--accent-bg);
		margin: 1.5rem 0;
		
		border: 1px solid var(--border);
		padding: 1rem;
	}

	.tag-create h3 {
		margin-top: 0;
	}



	.tag-create input+div {
		color: var(--text);
		background-color: var(--error);
		border: 1px dashed var(--error);
		border-radius: var(--standard-border-radius);
		padding: 0.225rem;
		display: none;
		margin-bottom: 1rem;
	}

	.tag-create .errors input:user-invalid+div {
		display: block;
	}

	.errors input#name:user-invalid:placeholder-shown+div::after {
		content: "Tag name is required";
	}

	.errors input#slug:user-invalid:placeholder-shown+div::after {
		content: "Slug is required";
	}

	.errors input#slug:user-invalid+div::after {
		content: "Slug is invalid"
	}

  #tag-errors {
    max-height: 500px;
    overflow: hidden;
    opacity: 1;
    transition: all .25s ease-in-out;
  }

  #tag-errors.htmx-swapping {
    max-height: 0;
    opacity: 0;
    transition: all .25s ease-in-out;
  }

</style>

<div class="tag-create">
  <h3>Create new tag</h3>

  <div id="tag-errors"></div>

  <form name="create-tag" 
    hx-post="/admin/tags"
    hx-target="#tag-table tbody" 
    hx-target-5xx="#tag-errors" 
    hx-target-4xx="#tag-errors" 
    hx-swap="afterbegin swap:.25s" 
    hx-on::after-request=" if (event.detail.xhr.status <= 399) this.reset(); " 
    hx-on::before-request=" document.getElementById('tag-errors').innerHTML = ''; "
  >

    <label for="name">
      Tag name
    </label>
    <div class="errors">
      <input type="text" id="name" name="name" placeholder="Tag Name" required>
      <div class="name-input"></div>
    </div>

    <label for="slug">
      Slug
    </label>
    <div class="errors">
      <input type="text" id="slug" name="slug" pattern="^[a-zA-Z0-9\-]+$" placeholder="tag-slug" required>
      <div class="slug-input"></div>
    </div>

    <hr>

    <button type="submit">Create</button>
  </form>
</div>
